{
	"name": "lara-igniter/laraigniter",
    "type": "project",
    "description": "The Laraigniter Framework.",
    "keywords": ["framework", "laraigniter"],
    "license": "MIT",
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/lara-igniter/framework"
        }
    ],
	"require": {
		"php": "^7.2.5|^8.0",
		"lara-igniter/framework": "dev-master",
		"yidas/codeigniter-psr4-autoload": "^2.0"
	},
	"require-dev": {
		"filp/whoops": "^2.14",
		"mikey179/vfsstream": "1.1.*"
	},
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        }
    },
    "scripts": {
		"post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ]
    },
	"extra": {
        "laraigniter": {
            "dont-discover": []
        }
    },
	"config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
